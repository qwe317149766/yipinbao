<script>
    apiready = function() {
        window.vm = new Vue({
            el: '#app',
            data: {
                isShowMore:false,
                word:'',

                shareVideo:{},
                video_list:[],//视频列表
            },

            // computed: {
            //     retVideosArr:function () {
            //         return this.isShowMore?this.videosArr:this.videosArr.slice(0,7);
            //     }
            // },
            created:function () {
                var that = this;
                that.getlunbo();
                that.getvideo();
            },

            methods: {

                //获取轮播图
                getlunbo:function(){
                    var that = this;
                    that.http(SharevideoGet_banner_list, 'post', {}, function (res) {
                        console.log(JSON.stringify(res));
                        if (res.code == 0) {
                            that.shareVideo = res.data;
                        }else {
                            that.$toast(res.msg)
                        }
                    })
                },

                //轮播图跳转
                gourl:function(url){
                    if(!url){
                        return false;
                    }
                    var browser = api.require('webBrowser');
                    browser.open({
                        url: url
                    });
                },


                //获取video
                getvideo:function(){
                    var that = this;
                    that.http(SharevideoVideoList, 'post', {}, function (res) {
                        console.log(JSON.stringify(res));
                        if (res.code == 0) {
                            that.video_list = res.data;
                        }else {
                            that.$toast(res.msg)
                        }
                    })
                },


                //跳转播放
                goplay:function(link,type){
                    var that = this;
                    if(that.shareVideo.show==1){
                        that.toPage('video_url','video_url.html',{'link':link,'type':type})
                    }else {
                        that.$toast('您暂无权限');
                    }
                },

                //搜索
                goSearch:function() {
                    var that = this;
                    if(that.word){
                        that.toPage('share_movie_search','./share_movie_search.html',{'word':that.word})
                    }else {
                        that.$toast({message:'请输入关键词',duration:1000});
                    }
                },
            },
        })
    }
</script>