<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>Document</title>
    <link rel="stylesheet" href="../../lib/vant/vant.css">
    <link rel="stylesheet" type="text/css" href="../../css/common.css" />
    <link rel="stylesheet" type="text/css" href="../../lib/iconfont/iconfont.css" />
    <link rel="stylesheet" href="../../lib/animate.css">
</head>
<body>
<div id="customer_service" v-cloak class="flex_col_between flex_items_stretch VH100">
    <div class="header bg_2B2B2B W_100 flex_shrink_0">
        <div class="P_4 color_fff flex_rowC relative flex_shrink_0 ">
            <i class="iconfont iconfanhui absolute fontS_18 PL_4" style="left: 0;" @click="goBack()"></i>
            <span class="fontS_15">联系客服</span>
        </div>
    </div>


    <div class="overflow_y flex_grow_1 fontS_13 bg_f2f2f2">
        <div class="B_radius_10 bg_fff M_4">
            <div class="P_5 flex_row_between">
                <div class="fontS_15">客服电话：{{dataInfo.mobile}}</div>
                <a :href="'tel:' + dataInfo.mobile" class="PTB_2 PLR_7 B_radius_5 fontS_13 bg_F3CB7B">拨打</a>
            </div>

            <div class="P_5 flex_row_between">
                <div class="fontS_15">客服微信：{{dataInfo.wx_code}}</div>
                <div class="PTB_2 PLR_7 B_radius_5 fontS_13 bg_F3CB7B" @click="copy(dataInfo.wx_code)">复制</div>
            </div>

            <div class="P_5 flex_row_between">
                <div class="fontS_15">客服QQ：{{dataInfo.qq}}</div>
                <div class="PTB_2 PLR_7 B_radius_5 fontS_13 bg_F3CB7B" @click="copy(dataInfo.qq)">复制</div>
            </div>


            <!--<div class="P_5 flex_row_between">-->
                <!--<div class="fontS_15">微信公众号：易拼宝</div>-->
                <!--<div class="PTB_2 PLR_7 B_radius_5 fontS_13 bg_F3CB7B">复制</div>-->
            <!--</div>-->


        </div>
    </div>
</div>
</body>
</html>
<script src="../../lib/api.js"></script>
<script src="../../script/const.js"></script>
<script src="../../lib/vue/vue.js"></script>
<script src="../../lib/fastclick.min.js"></script>
<script src="../../lib/vant/vant.min.js"></script>
<script src="../../script/rsa.js"></script>
<script src="../../script/aes.js"></script>
<script src="../../script/common.js"></script>
<script>
    apiready = function() {
        window.vm = new Vue({
            el: '#customer_service',
            data: {
                dataInfo:{}
            },
            created: function() {
                var that = this;
                that.getdata();
            },

            methods: {
                getdata:function(){
                    var that = this;
                    that.http(homeCompanyMess, 'post', {}, function (res) {
                        // console.log(JSON.stringify(res));
                        if (res.code == 0) {
                            that.dataInfo = res.data;
                        }else {
                            that.$toast(res.msg)
                        }
                    })
                },

                //复制
                copy: function(value) {
                    var that = this;
                    var clipBoard = api.require('clipBoard');
                    clipBoard.set({
                        value: value
                    }, function(ret, err) {
                        if (ret) {
                            that.$toast('已复制');
                        } else {

                        }
                    });
                },

            },
        })
    };
</script>
